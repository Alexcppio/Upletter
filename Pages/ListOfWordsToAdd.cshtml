@page "/pages/addlist"
@model ListOfWordsToAddModel

<!DOCTYPE html>
<html>
<head>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css"
          rel="stylesheet" />
</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">Список найденных слов</h5>
    <ul class="list-group m-2">
        @foreach (string s in Model.WordList)
        {
            <li class="list-group-item">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                    <label class="form-check-label" for="exampleCheck1">@s</label>
                </div>
            </li>
        }
    </ul>
</body>
</html>

@functions
{
    public class ListOfWordsToAddModel : PageModel
    {
        public string[] WordList { get; set; } = { "One", "Two", "Three" };
    }
}
